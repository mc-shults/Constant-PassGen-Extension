{

  "manifest_version": 2,
  "name": "Constant PassGen",
  "version": "1.0",
 
  "description": "This extension generates a password based on the main password and site. Two password generated from the same data will be the same.",
  "icons": {
    "48": "icons/ConstPassGen48.png",
	"96": "icons/ConstPassGen96.png"
  },

  "permissions": [
    "activeTab",
    "storage",
	"tabs"
  ],
  
  "applications": {
    "gecko": {
      "id": "ConstPassGen@ext.mozilla.org",
      "strict_min_version": "57.0"
    }
  },

  "browser_action": {
    "default_icon": "icons/ConstPassGen32.png",
    "default_title": "Constant PassGen",
    "default_popup": "popup/pass_gen.html"
  }


}